pipeline {
    agent { label 'Jenkins-Agent' } 
    tools {
        jdk   'Java17'
        maven 'maven3' 
    }
    stages {
        stage("Clean WorkSpace") {
            steps {
                // Clean before build
                cleanWs()
            }
        }

      stage("Checkout code from SCM") {
            steps {
              git url: 'https://github.com/devsecops-debug/registration-app', branch: 'main' ,  credentialsId:'github'
            }
        }

     stage("Build Application) {
        steps {
          sh "mvn clean package"    
        }

     }
     
    stage("Test the Application) {
        steps {
          sh "mvn test"    
        }

     }

    }
}
